# App URL for link generation contexts (optional for client)
NEXT_PUBLIC_APP_URL=https://packet-post.pradum.dev

# Signaling provider selector
WEBRTC_SIGNALING_PROVIDER=supabase

# Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DB_SCHEMA=public

# Session lifetime in minutes (clamped by app logic)
WEBRTC_SESSION_TTL_MINUTES=15

# Hard server storage guard for classic uploads and live-mode fallback uploads
WEB_UPLOAD_MAX_BYTES=26214400

# API anti-abuse rate limits (per IP, per minute)
WEBRTC_CREATE_RATE_LIMIT_PER_MIN=20
WEBRTC_JOIN_RATE_LIMIT_PER_MIN=60
WEBRTC_LOG_EVENTS=0

# ICE servers config (JSON array). Include TURN here for production.
# Example:
# WEBRTC_ICE_SERVERS_JSON=[{"urls":["stun:stun.l.google.com:19302"]},{"urls":["turn:turn.example.com:3478"],"username":"user","credential":"pass"}]
WEBRTC_ICE_SERVERS_JSON=[{"urls":["stun:stun.l.google.com:19302"]}]

# Legacy WebSocket fallback only (not required for Supabase signaling)
NEXT_PUBLIC_SIGNALING_URL=ws://127.0.0.1:3001
